{
  "editor.unfoldOnClickAfterEndOfLine": false,

  "files.eol": "\n",
  "files.autoSave": "afterDelay",
  "files.associations": {
    "*.json": "jsonc",
    "TODO": "markdown",
    ".clang-tidy": "yaml",
    "cpp": "cpp",
    "*.l": "lex",
    "*.y": "yacc",
    "CMakeLists.txt": "cmake",
    "unordered_map": "cpp"
  },

  //* C/C++
  "cmake.preferredGenerators": ["Ninja"],

  //* python
  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [88],
    "editor.formatOnType": true
  },
  "flake8.args": ["--ignore=E203,W503", "--max-line-length=88"],
  "autoDocstring.docstringFormat": "one-line-sphinx"
}
